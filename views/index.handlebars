<!-- Dropdown Structure -->
<ul id="dropdown1" class="dropdown-content">
    <li><a href="/members">Home</a></li>
    <li><a href="/search">Search Movies</a></li>
    <li><a href="/logout">Logout</a></li>

</ul>
<nav>
    <div class="nav-wrapper grey darken-2">
        <a href="#!" class="brand-logo">QuaranScreen</a>
        <div class="links-wrapper">

            <ul class="right">

                <!-- Dropdown Trigger -->
                <li><a class="dropdown-trigger" href="#!" data-target="dropdown1"><i class="fa fa-bars fa-6"
                            aria-hidden="true"></i></a></li>
            </ul>
        </div>
    </div>
</nav>
<div class="container">
    <div class="row">
        <div class="col s12 xl6">
            <h3 class = "title">My WatchList</h3>
            <div id="my-watchlist">
                <ul>

                    {{#each userMovieList}}
                    {{#unless this.is_watched}}
                    <div class="row">
                        <div class="user-movie">

                            <div class="col s4">

                                <pre> {{this.movietitle}}
					        </pre>
                            </div>
                            <div class="col s8">

                                <button class="change-isWatched waves-effect waves-light btn btn-small" type="button"
                                    data-id="{{api_id}}" data-newiswatched="{{is_watched}}">
                                    Already Watched
                                </button>


                                <button class="delete red accent-3 waves-effect waves-light btn btn-small" type="button"
                                    data-id="{{api_id}}">
                                    Delete
                                </button>
                            </div>
                        </div>

                    </div>
                    {{/unless}}
                    {{/each}}
                </ul>

            </div>
        </div>
        <div class="col s12 xl6">
            <h3 class="title">Already Watched</h3>

            <div id="already-watched">
                <ul>
                    {{#each userMovieList}}
                    {{#if is_watched}}
                    <div class="user-movie">

                        <pre> {{this.movietitle}}
                </div>
					</pre>
                        {{/if}}
                        {{/each}}
                </ul>

            </div>
        </div>
    </div>
</div>


<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<!--External JS-->
<script src="/js/movielist.js"></script>